label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

[module/spotify]
type = custom/script
interval = 1
#format-prefix = ${icons.spotify}
format = <label>
exec = python3 $HOME/app/polybar-modules/polybar-spotify/spotify_status.py --playpause 'â–¶,â‰' --format '{play_pause} {artist} - {song}' --playpause-font=3 --trunclen=100

